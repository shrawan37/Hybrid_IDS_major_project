  },
  "xxe_injection": {
    "pattern": "(<!ENTITY\\s+xxe\\s+SYSTEM|<!DOCTYPE\\s+root\\s+\\[<!ENTITY)",
    "severity": 0.85,
    "description": "XXE Injection - Specific XML Entity attacks"
  },
  "ldap_injection": {
    "pattern": "(\\)\\s*\\(&\\s*\\(|\\)\\s*\\(\\|\\s*\\(|\\)\\s*\\(!\\s*\\(|\\*\\)\\s*\\(|uid=\\*\\)|cn=\\*\\))",
    "severity": 0.80,
    "description": "LDAP Injection - Filter manipulation with known injection structures"
  },
  "web_shell": {
    "pattern": "(eval\\(\\$_POST\\[|system\\(\\$_GET\\[|shell_exec\\(\\$_POST\\[|passthru\\(\\$_REQUEST\\[)",
    "severity": 0.95,
    "description": "Web Shell - PHP execution via input parameters"
  },
  "malware_signature": {
    "pattern": "(powershell\\s+-nop\\s+-w\\s+hidden|powershell\\.exe\\s+-enc|cmd\\.exe\\s+/c\\s+powershell|certutil\\s+-urlcache\\s+-split)",
    "severity": 0.90,
    "description": "Malware - Specific malicious command line arguments"
  },
  "json_injection": {
    "pattern": "(\"admin\"\\s*:\\s*true,\"|\\\"username\\\"\\s*:\\s*\\{\\s*\\\"\\$ne\\\"\\s*:\\s*null\\})",
    "severity": 0.80,
    "description": "JSON Injection - Authentication bypass structure"
  },
  "nosql_injection": {
    "pattern": "(\\{\\s*\\$ne\\s*:\\s*null\\}|\\{\\s*\\$gt\\s*:\\s*\\\"\\\"\\}|\\{\\s*\\$where\\s*:\\s*\\\"sleep)",
    "severity": 0.85,
    "description": "NoSQL Injection - Known bypass patterns"
