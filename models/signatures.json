{
  "sql_injection": {
    "pattern": "(?i)('.*OR|UNION.*SELECT|DROP|DELETE.*FROM|INSERT.*INTO|exec.*sp_|xp_cmdshell|';)",
    "severity": 0.95,
    "description": "SQL Injection attempt detected"
  },
  "xss": {
    "pattern": "(?i)(<script|javascript:|onerror|onclick|alert\\(|<img|<iframe)",
    "severity": 0.90,
    "description": "Cross-Site Scripting (XSS) attack detected"
  },
  "ddos": {
    "pattern": "(?i)(flood|dos|slowloris)",
    "severity": 0.85,
    "description": "Potential DDoS/flooding attack detected"
  },
  "port_scan": {
    "pattern": "(?i)(nmap|masscan|zmap|portscan)",
    "severity": 0.80,
    "description": "Port scanning activity detected"
  },
  "arp_spoofing": {
    "pattern": "(?i)(arp.*spoof|gratuitous|duplicate.*ip)",
    "severity": 0.85,
    "description": "ARP spoofing or manipulation detected"
  },
  "dns_tunneling": {
    "pattern": "(?i)(dns.*tunnel|dns-over|doh)",
    "severity": 0.70,
    "description": "DNS tunneling detected"
  },
  "smb_exploit": {
    "pattern": "(?i)(eternalblue|smbghost|wannacry)",
    "severity": 0.90,
    "description": "SMB exploitation attempt detected"
  },
  "ftp_brute_force": {
    "pattern": "(?i)(ftp.*auth|ftp.*fail)",
    "severity": 0.75,
    "description": "FTP brute force attempt detected"
  },
  "ssh_attack": {
    "pattern": "(?i)(ssh.*fail|invalid.*user)",
    "severity": 0.85,
    "description": "SSH attack detected"
  },
  "email_phishing": {
    "pattern": "(?i)(verify|urgent action|click here)",
    "severity": 0.75,
    "description": "Phishing attempt detected"
  }
}
