{
  "xss_payload": {
    "pattern": "(<script[^>]*>.*?</script>|javascript\\s*:\\s*alert\\(|on(?:error|click|load|mouseover)\\s*=\\s*['\\\"]alert|\\<img\\s+src=['\\\"]x['\\\"]\\s+onerror=|\\<svg\\s+onload=)",
    "severity": 0.90,
    "description": "XSS - Specific script execution patterns"
  },
  "command_injection": {
    "pattern": "(;\\s*/bin/sh|;\\s*/bin/bash|;\\s*cmd\\.exe|\\|\\|\\s*wget\\s+http|\\|\\|\\s*curl\\s+http|`cat\\s+/etc/passwd`|\\$\\((?:whoami|id|uname\\s-a)\\))",
    "severity": 0.90,
