  "path_traversal": {
    "pattern": "(\\.\\./\\.\\./\\.\\./|\\.\\.\\\\\\.\\.\\\\\\.\\.\\\\|/etc/shadow|/etc/passwd|c:\\\\windows\\\\system32\\\\cmd\\.exe)",
    "severity": 0.85,
    "description": "Path Traversal - Deep traversal or critical system files"
  },
  "suspicious_encoding": {
    "pattern": "(%252e%252e%252f|%2e%2e%2f%2e%2e%2f|%3cscript%3e)",
    "severity": 0.75,
    "description": "URL Encoding - Double encoded traversal or scripts"
  },
  "buffer_overflow": {
    "pattern": "(\\x90{50,}|\\x41{100,})",
    "severity": 0.95,
    "description": "Buffer Overflow - NOP sleds or specific hex patterns"
  },
  "sql_injection": {
    "pattern": "('(?:\\s+OR\\s+'1'='1|\\s+OR\\s+1=1)|(?:\\s+UNION\\s+SELECT\\s+)|(?:\\s+WAITFOR\\s+DELAY\\s+)|admin'--|';\\s*DROP\\s+TABLE|';\\s*EXEC\\s+xp_)",
    "severity": 0.95,
    "description": "SQL Injection - Specific boolean-based or time-based payloads"
  }
